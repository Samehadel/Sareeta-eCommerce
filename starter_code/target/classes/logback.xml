<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name="splunkAppender" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>http://localhost:8088</url>
        <token>1534e6ff-0054-4286-9e0e-4a6ee9711c92</token>
        <disableCertificateValidation>true</disableCertificateValidation>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern> %msg%n </pattern>
        </layout>
    </appender>

    <logger name="splunkLogger" additivity="false" level="debug">
        <appender-ref ref="splunkAppender"/>
    </logger>

</configuration>